<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Programadepaises1.Views.FavoritosPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Programadepaises1.Models"
             xmlns:viewmodels="clr-namespace:Programadepaises1.ViewModels"
             x:DataType="viewmodels:FavoritosViewModel"
             Title="Países Favoritos">

    <RefreshView IsRefreshing="{Binding EstaCargando}"
                 Command="{Binding CargarFavoritosCommand}">

        <CollectionView ItemsSource="{Binding PaisesFavoritos}"
                        BackgroundColor="LightGray">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:PaisModel">
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Eliminar"
                                           BackgroundColor="Red"
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:FavoritosViewModel}}, Path=EliminarFavoritoCommand}"
                                           CommandParameter="{Binding .}" />
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <Border Margin="10,5"
                                BackgroundColor="White"
                                Stroke="LightGray"
                                StrokeThickness="1">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10" />
                            </Border.StrokeShape>

                            <Grid Padding="15"
                                  ColumnDefinitions="60,*,Auto"
                                  RowDefinitions="Auto,Auto,Auto,Auto">

                                <!-- Bandera -->
                                <Border Grid.Column="0" 
                                        Grid.RowSpan="4"
                                        WidthRequest="50"
                                        HeightRequest="35"
                                        Stroke="LightGray"
                                        StrokeThickness="1"
                                        VerticalOptions="Center">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="5" />
                                    </Border.StrokeShape>

                                    <Image Source="{Binding BanderaUrl}"
                                           Aspect="AspectFill" />
                                </Border>

                                <!-- Nombre del país -->
                                <Label Grid.Column="1" 
                                       Grid.Row="0"
                                       Text="{Binding NombreComun}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="Black"
                                       Margin="10,0,0,5" />

                                <!-- Capital -->
                                <Label Grid.Column="1" 
                                       Grid.Row="1"
                                       Text="{Binding CapitalTexto, StringFormat='Capital: {0}'}"
                                       FontSize="14"
                                       TextColor="Gray"
                                       Margin="10,0,0,2" />

                                <!-- Población -->
                                <Label Grid.Column="1" 
                                       Grid.Row="2"
                                       Text="{Binding PoblacionTexto, StringFormat='Población: {0}'}"
                                       FontSize="14"
                                       TextColor="Gray"
                                       Margin="10,0,0,2" />

                                <!-- Región -->
                                <Label Grid.Column="1" 
                                       Grid.Row="3"
                                       Text="{Binding Region, StringFormat='Región: {0}'}"
                                       FontSize="14"
                                       TextColor="Gray"
                                       Margin="10,0,0,0" />

                                <!-- Estrella de favorito -->
                                <Label Grid.Column="2" 
                                       Grid.RowSpan="4"
                                       Text="★"
                                       FontSize="24"
                                       TextColor="Gold"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center" />
                            </Grid>
                        </Border>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <StackLayout VerticalOptions="CenterAndExpand"
                             HorizontalOptions="CenterAndExpand">
                    <Label Text="📍"
                           FontSize="48"
                           HorizontalOptions="Center"
                           Margin="0,0,0,20" />
                    <Label Text="No tienes países favoritos"
                           FontSize="18"
                           TextColor="Gray"
                           HorizontalOptions="Center" />
                    <Label Text="Ve a la pestaña 'Países' y marca algunos como favoritos"
                           FontSize="14"
                           TextColor="LightGray"
                           HorizontalOptions="Center"
                           Margin="20,10,20,0"
                           HorizontalTextAlignment="Center" />
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </RefreshView>
</ContentPage>
